<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/flat_yellow_1</item>
        <item name="strokeColor">@color/flat_yellow_1</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/flat_yellow_1</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="CustomProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/exo_edit_mode_background_color</item>
        <item name="android:progressBackgroundTint">@color/vucos_segment_text_gray</item>
    </style>
</resources>